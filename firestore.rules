rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This function checks if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Users can create their own user document on signup
    match /users/{userId} {
      allow create;
      // Users can only read their own data
      allow read: if request.auth.uid == userId;
      // Admins can read and write all user data
      allow read, write: if isAdmin();
    }

    // Public read access for slideshow, menus, and pages
    match /slideshow/{slideId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /menus/{menuId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /pages/{pageId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Admins can read the list of other admins
    match /admins/{adminId} {
        allow read: if isAdmin();
        // For security, the admin list cannot be changed from the client-side
        allow write: if false;
    }
  }
}
